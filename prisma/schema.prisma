generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum HttpMethod {
  GET
  POST
  HEAD
}

enum MonitorState {
  PENDING
  UP
  DOWN
}

enum IncidentState {
  OPEN
  RESOLVED
}

model User {
  id       String    @id @default(uuid())
  email    String    @unique
  password String
  name     String
  monitors Monitor[]
}

model Monitor {
  id                   String       @id @default(uuid())
  name                 String?
  url                  String
  method               HttpMethod   @default(GET)
  interval             Int
  timeout              Int
  lastStatus           MonitorState @default(PENDING)
  consecutiveFailures  Int          @default(0)
  consecutiveSuccesses Int          @default(0)
  createdAt            DateTime     @default(now())

  //RELATIONS
  userId      String
  user        User         @relation(fields: [userId], references: [id])
  monitorLogs MonitorLog[]
  incidents   Incident[]
}

model MonitorLog {
  id         String       @id @default(uuid())
  monitorId  String
  status     MonitorState
  responseMs Int?
  statusCode Int?
  reason     String?
  createdAt  DateTime     @default(now())

  monitor Monitor @relation(fields: [monitorId], references: [id])
}

model Incident {
  id            String        @id @default(uuid())
  monitorId     String
  startedAt     DateTime
  endedAt       DateTime?
  status        IncidentState
  triggerReason String

  monitor Monitor @relation(fields: [monitorId], references: [id])
}
